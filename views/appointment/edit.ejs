<%- include ('../partials/header.ejs') %>
  <div class="container">
    <div class="row">
        <h1 style="text-align: center">Update Appointment !!</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/patient/<%= appointment.patient._id %>/appointment/<%= appointment._id %>?_method=PUT" method="POST">
				<div class="form-group">
                  <label for="name">Doctor name: </label>
                  <input class="form-control" type="text" name="appointment[doctor]" placeholder="name" id="name" required=true value=<%= appointment.doctor.name %>>
                </div>
				<div class="form-group">
                    <label for="datetime">Select Time</label>
                    <input type="datetime-local" name="appointment[time]"> 
                </div>
                <div class="form-group">
                    <label for="name">Reason : </label>
                    <input class="form-control" type="text" name="appointment[description]" placeholder="Reason for Appointment" id="description" required=true value=<%= appointment.description %>>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit !!</button>
                </div>
            </form>
            <a href="/patient">Go Back</a>
        </div>
    </div>
</div>

<%- include('../partials/footer.ejs') %>