<%- include("partials/header.ejs") %>


<div class="container">
    <div class="row">
        <h1 style="text-align: center">Sign UP !!</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/register" method="POST">
				<div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name" required=true>
                </div>
				<div class="form-group">
                    <input class="form-control" type="number" name="age" placeholder="age" step=1 required=true>
                </div>
				<label>Select Gender </label>
				<div class = "form-check">
					<input class="form-check-input" type="radio" name="gender" id="Radios1" value="male" >
					<label class="form-check-label" for="exampleRadios1">
					Male
					</label>
				</div>
				<div class = "form-check">
					<input class="form-check-input" type="radio" name="gender" id="Radios2" value="female" >
					<label class="form-check-label" for="exampleRadios1">
					Female
					</label>
				</div>
                <div class="form-group">
                    <input class="form-control" type="text" name="email" placeholder="email ID" required=true>
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="password" placeholder="password" required=true>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/">Go Back</a>
        </div>
    </div>
</div>

<%- include("partials/footer.ejs") %>