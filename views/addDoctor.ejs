<%- include ('partials/header.ejs') %>
<h1>Add Doctor Details</h1>

<form action="/admin/addDoc" method="post" class="form-example">
    <div>
      <label for="name">Doctor name: </label>
      <input type="text" name="name" id="name" required>
    </div>
    <div class="">
      <label for="email">Email: </label>
      <input type="email" name="email" id="email" required>
    </div>
    <div class="">
        <label for="address">Address: </label>
        <input type="text" name="address" id="address" required>
    </div>
    <div class="">
        <label for="degree">Specialization: </label>
        <input type="text" name="degree" id="degree" required>
    </div>
    <div class="">
        <label for="contact number">Phone: </label>
        <input type="number" name="phone" required>
    </div>
    <div class="">
        <label for="remark">Remark: </label>
        <input type="text" name="remark" id="remark" required>
    </div>
    <div class="form-example">
      <input type="submit" value="submit!">
    </div>
  </form>
