<%- include("../partials/header.ejs") %>
<div class="container">
    <div class="container target">
        <div class="row">
            <div class="col-sm-10">
                <h1>Dr. <%= doctor.name %></h1>
                 <a class="btn btn-success" href="#">Book Appointment </a>
            </div>
          <div class="col-sm-2"><img src="../images/doc_avtar.jpg" alt="Avatar" class="avatar"></div>
        </div>
        <div class="row">
            <div class="col-sm-5">
                <ul class="list-group">
                    <li class="list-group-item text-muted" contenteditable="false">Profile</li>
                    <li class="list-group-item text-right"><span class="pull-left"><strong class="">Name: </strong></span> <%= doctor.name %></li>
                    <li class="list-group-item text-right"><span class="pull-left"><strong class="">Medical License Number: </strong></span> 11</li>
                    <li class="list-group-item text-right"><span class="pull-left"><strong class="">Address: </strong></span><%= doctor.address %></li>
                    <li class="list-group-item text-right"><span class="pull-left"><strong class="">Email: </strong></span> <%= doctor.email %></li>
                    <li class="list-group-item text-muted" contenteditable="false">Contact Details</li>
                    <li class="list-group-item text-right"><span class="pull-left"><strong class="">Cellphone Number: </strong></span><%= doctor.phone %></li>
                </ul>
            </div>
        </div>
    <a href="/doctor">Go Back</a>
    </div>
</div>
<%- include("../partials/footer.ejs") %>